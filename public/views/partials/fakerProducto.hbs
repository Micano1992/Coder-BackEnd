{{#if isFaker}}
<div class="jumbotron">


    <div class="table-responsive">
        <table class="table table-dark">
            <tr>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Imagen</th>
            </tr>
            {{#each productos}}
            <tr>
                <td>{{this.nombre}}</td>
                <td>${{this.precio}}</td>
                <td><img width="50" src={{this.imagen}} alt="No encontrado"></td>
            </tr>
            {{/each}}
        </table>
    </div>

</div>
{{/if}}